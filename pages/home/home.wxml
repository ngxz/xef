<!--pages/home/home.wxml-->
<view class='container'>
  <!--top-->
  <view class="topBox">
    <!--主按钮-->
    <view class="menuBox">
      <ul>
        <li>
          <a href="#">
            <image src='{{orderI}}'></image>
            <span>订单</span>
          </a>
        </li>
        <li>
          <a href="#">
            <image src='{{goodsI}}'></image>
            <span>商品</span>
          </a>
        </li>
        <li>
          <a href="#">
            <image src='{{payI}}'></image>
            <span>账单</span>
          </a>
        </li>
      </ul>
    </view>
  </view>
  <!--总体内容-->
  <view class="contentBox">
    <!--功能按钮菜单-->
    <view class="conBox">
      <ul>
        <li>
          <image src='{{tableI}}'></image>
          <span>报表</span>
        </li>
        <li>
          <image src='{{codeI}}'></image>
          <span>店铺二维码</span>
        </li>
        <li>
          <image src='{{manaI}}'></image>
          <span>收银员管理</span>
        </li>
        <li>
          <image src='{{boxI}}'></image>
          <span>营销活动</span>
        </li>
        <li>
          <image src='{{soI}}'></image>
          <span>敬请期待</span>
        </li>
      </ul>
    </view>
    <!--todaydata-->
    <view class="todayData">
      <view class="tit">
        <span style="background-image:url('{{lineI}}');">今日数据</span>
      </view>
      <view class="conData">
        <ul>
          <li>
            <view class="txt">收款金额(元)</view>
            <span>0.00</span>
          </li>
          <li>
            <view class="txt">收款笔数(笔)</view>
            <span>0</span>
          </li>
        </ul>
      </view>
    </view>
  </view>
</view>